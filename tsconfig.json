{
  "ts-node": {
    "files": true
  },
  "files": [
    "typings/custom-mongo.d.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
		"strict": true,
    "incremental": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
    ] /* List of folders to include type definitions from. */,
  },
  "include": ["src/**/*.ts", "**/src/**/*.ts",  "typings/**/*.d.ts", "src"],
  "exclude": ["node_modules", "build"]
}